<Window x:Class="Lab4.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Авторизація" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Логін" Margin="0,0,0,5"/>
            <TextBox Name="UsernameTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <TextBox Name="PasswordTextBox" Width="300" Margin="0,0,0,10"/>
            <Button Content="Увійти" Width="100" Height="30" Margin="10,0,10,0" Click="LoginButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>

<Window x:Class="Lab4.CustomersInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Введення даних" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Повне ім'я" Margin="0,0,0,5"/>
            <TextBox Name="NameTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон" Margin="0,0,0,5"/>
            <TextBox Name="PhoneTextBox" Width="300" Margin="0,0,0,10"/>

            <TextBlock Text="Пошта" Margin="0,0,0,5"/>
            <TextBox Name="EmailTextBox" Width="300" Margin="0,0,0,10">
            </TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зберегти" Width="100" Height="30" Margin="10,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Скасувати" Width="100" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
